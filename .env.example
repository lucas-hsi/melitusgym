# Database Configuration
DATABASE_URL=postgresql://healthtrack_user:healthtrack_pass@localhost:5432/healthtrack
POSTGRES_DB=healthtrack
POSTGRES_USER=healthtrack_user
POSTGRES_PASSWORD=healthtrack_pass
USE_SQLITE=true  # development default; set to false in Railway

# Backend Configuration
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENVIRONMENT=development
PORT=8000  # Railway sets PORT automatically; backend binds to this

# Frontend Configuration
# Use sempre o sufixo "/api" na URL base para alinhar com os endpoints
# Exemplo de desenvolvimento local:
NEXT_PUBLIC_API_URL=http://127.0.0.1:8000/api
NODE_ENV=development

# External APIs (Para fases futuras)
# NUTRITIONIX_APP_ID=your_nutritionix_app_id
# NUTRITIONIX_API_KEY=your_nutritionix_api_key
# MUSCLEWIKI_API_KEY=your_musclewiki_api_key

# Email Configuration (Para fases futuras)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Nutrition TACO Dynamic Loader
# If not set, the backend will look for Taco-4a-Edicao.xlsx at repo root
TACO_FILE_PATH=./Taco-4a-Edicao.xlsx

# Security - CORS Configuration
# CORS_ORIGINS aceita dois formatos:
# 1) CSV (recomendado para Railway): http://127.0.0.1:3000,http://localhost:3000
# 2) Lista JSON em string: ["http://127.0.0.1:3000","http://localhost:3000"]
# 
# IMPORTANTE: Para Railway, use sempre o formato CSV sem colchetes
# Exemplo para produção Railway:
# CORS_ORIGINS=https://tranquil-vitality-production-15a2.up.railway.app,http://127.0.0.1:3000,http://localhost:3000
CORS_ORIGINS=http://127.0.0.1:3000,http://localhost:3000,https://tranquil-vitality-production-15a2.up.railway.app
ALLOWED_ORIGINS=http://127.0.0.1:3000,http://localhost:3000,https://tranquil-vitality-production-15a2.up.railway.app

# Logging
# Logging
# Valores: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# JWT (usados no backend, com compatibilidade de nomes)
JWT_SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# Fallbacks compatíveis (alguns serviços usam estes nomes)
SECRET_KEY=${JWT_SECRET_KEY}
ALGORITHM=${JWT_ALGORITHM}
ACCESS_TOKEN_EXPIRE_MINUTES=${JWT_ACCESS_TOKEN_EXPIRE_MINUTES}

# Redis Configuration (Para cache futuro)
# REDIS_URL=redis://localhost:6379

# Monitoring (Para produção)
# SENTRY_DSN=your_sentry_dsn